{
  "name": "@rownd/react",
  "version": "2.7.3",
  "license": "MIT",
  "private": false,
  "type": "module",
  "module": "dist/main.js",
  "types": "dist/main.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "types": "./dist/main.d.ts"
    },
    "./next": {
      "import": "./dist/next.js",
      "types": "./dist/next.d.ts"
    },
    "./next/server": {
      "import": "./dist/next/server.js",
      "types": "./dist/next/server.d.ts"
    },
    "./remix": {
      "import": "./dist/remix.js",
      "types": "./dist/remix.d.ts"
    }
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "cd example && npm run dev",
    "build": "vite build && npm run prepare-packages",
    "build:dev": "vite build --minify false && npm run prepare-packages",
    "prepare-packages": "node scripts/prepare-packages.js",
    "test": "vitest",
    "lint": "eslint src",
    "prepare": "vite build",
    "release": "release-it",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "examples:link": "node scripts/link-examples.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "Matt Hamann",
  "size-limit": [
    {
      "path": "dist/main.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/next.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/remix.js",
      "limit": "20 KB"
    }
  ],
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    },
    "hooks": {
      "before:init": [
        "npm run build"
      ],
      "before:release": [
        "VERSION=${version} node scripts/before-release.js",
        "git add ."
      ],
      "after:release": [
        "cd packages/react && npm publish --access public",
        "cd packages/next && npm publish --access public",
        "cd packages/remix && npm publish --access public"
      ]
    }
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^8.0.1",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitest/coverage-v8": "^3.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "happy-dom": "^13.3.8",
    "husky": "^7.0.4",
    "jsdom": "^26.1.0",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "release-it": "^17.1.1",
    "rollup-preserve-directives": "^1.1.1",
    "size-limit": "^7.0.8",
    "tslib": "^2.3.1",
    "typescript": "^4.9.5",
    "typescript-eslint": "^7.0.2",
    "vite": "^5.1.3",
    "vite-bundle-visualizer": "^1.0.1",
    "vite-plugin-dts": "^3.7.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.2",
    "vitest-fetch-mock": "^0.4.5",
    "vitest-mock-extended": "^3.1.0"
  },
  "peerDependencies": {
    "react": ">=17.0",
    "react-dom": ">=17.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rownd/react.git"
  },
  "dependencies": {
    "jose": "^5.9.6"
  }
}
