{
  "name": "@rownd/react",
  "version": "2.0.0",
  "license": "MIT",
  "private": false,
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "cd example && npm run dev",
    "build": "vite build",
    "test": "vitest",
    "lint": "eslint src",
    "prepare": "vite build",
    "release": "release-it",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "Matt Hamann",
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 KB"
    }
  ],
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^8.0.1",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@vitest/coverage-v8": "^1.3.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "happy-dom": "^13.3.8",
    "husky": "^7.0.4",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "release-it": "^17.1.1",
    "size-limit": "^7.0.8",
    "tslib": "^2.3.1",
    "typescript": "^4.9.5",
    "typescript-eslint": "^7.0.2",
    "vite": "^5.1.3",
    "vite-bundle-visualizer": "^1.0.1",
    "vite-plugin-dts": "^3.7.2",
    "vitest": "^1.3.0"
  },
  "peerDependencies": {
    "react": ">=17.0",
    "react-dom": ">=17.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rownd/react.git"
  }
}
